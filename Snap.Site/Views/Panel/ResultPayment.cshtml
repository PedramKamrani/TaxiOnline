@model Snap.Data.Layer.Entities.Factor

@{
    ViewData["Title"] = "نتیجه تراکنش";
    Layout = "~/Views/Shared/_Site.cshtml";
}

<h1 class="text-center">نتیجه تراکنش</h1>

<div class="row">
    <div class="col-lg-3"></div>
    <div class="col-lg-6">
        <form asp-action="Payment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <img src="~/img/Payment.png" alt="اسنپ" class="img-fluid" style="margin: auto" />
            </div>
            <div class="form-group">

                @if (Model.BankName == null)
                {
                    <div class="alert alert-danger">
                        <h4 class="text-center">پرداخت انجام نشد</h4>
                        <br />
                        <h4 class="text-center">شماره سفارش : @Model.OrderNumber</h4>
                    </div>
                }
                else
                {
                    <div class="alert alert-success">
                        <h4 class="text-center">پرداخت با موفقیت انجام شد</h4>
                        <br />
                        <h4 class="text-center">شماره سفارش : @Model.OrderNumber</h4>
                        <br />
                        <h4 class="text-center">شماره پیگیری : @Model.RefNumber</h4>
                    </div>
                }

            </div>
        </form>
    </div>
</div>

